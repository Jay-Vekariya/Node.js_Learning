</head>
<body>
    <nav>
        <div>
            <a href="/"><h2>Blog site</h2></a>
            <p><%= title %> Vekariya</p>
        </div>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/about/create">new contact</a></li>
        </ul>
    </nav>
    <div>
        <h2>AllBlogs</h2>
        <% if(blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
        <h3><%= blog.title %></h3>
        <p><%= blog.snippet %></p>
        <% }) %>
        <% } else { %>
            <p>There are no blogs to display</p>
            <% } %>  
    </div>
